<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a16498.arioappstore.MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="382dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#a0000000">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="90dp"
            android:src="@mipmap/baka" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小喵下载"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:elevation="80dp"
        app:cardCornerRadius="7dp"
        app:cardBackgroundColor="#a0000000"
        android:layout_width="120dp"
        android:layout_height="166dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:src="@drawable/bilibili1"
              android:layout_width="120dp"
              android:layout_height="120dp" />

           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:background="@mipmap/pause"
                   android:id="@+id/Bili_pause"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <Button
                   android:background="@mipmap/download"
                   android:id="@+id/Bili_start"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
               <Button
                   android:background="@mipmap/stop1"
                   android:id="@+id/Bili_cancel"
                   android:layout_width="40dp"
                   android:layout_height="40dp" />
           </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="49dp"
            app:cardElevation="10dp"
            android:elevation="80dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#a0000000"
            android:layout_width="120dp"
            android:layout_height="166dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/qq"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@mipmap/pause"
                        android:id="@+id/QQ_pause"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/download"
                        android:id="@+id/QQ_start"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/stop1"
                        android:id="@+id/QQ_cancel"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            android:elevation="80dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#a0000000"
            android:layout_width="120dp"
            android:layout_height="166dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/wechat"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@mipmap/pause"
                        android:id="@+id/we_pause"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/download"
                        android:id="@+id/we_start"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/stop1"
                        android:id="@+id/we_cancel"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="49dp"
            app:cardElevation="10dp"
            android:elevation="80dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#a0000000"
            android:layout_width="120dp"
            android:layout_height="166dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/zhi"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@mipmap/pause"
                        android:id="@+id/zhi_pause"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/download"
                        android:id="@+id/zhi_start"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <Button
                        android:background="@mipmap/stop1"
                        android:id="@+id/zhi_cancel"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:textColor="#a0000000"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:text="支持以上几种方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#a0000000"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:textSize="40sp"
        android:text="-小喵"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>
